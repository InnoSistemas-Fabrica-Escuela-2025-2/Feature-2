{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend/innosistemas && chmod +x ./mvnw && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "cd backend/innosistemas && java -jar target/innosistemas-0.0.1-SNAPSHOT.jar",
    "healthcheckPath": "/actuator/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
